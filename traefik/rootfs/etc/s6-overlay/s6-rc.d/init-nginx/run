#!/command/with-contenv bashio
# shellcheck shell=bash
# ==============================================================================
# Home Assistant Community Add-on: traefik
# Configures NGINX for use with the traefik reverse proxy
# ==============================================================================
declare traefik_port=8080
declare traefik_protocol=http
declare tls_port

# Figure out port settings from traefik
if bashio::var.true "$(yq e '.tls.enabled' /data/adguard/AdGuardHome.yaml)";
then
    tls_port=$(yq e '.tls.port_https // ""' /data/adguard/AdGuardHome.yaml)
    if bashio::var.has_value "${tls_port}" && [[ "${tls_port}" -ne 0 ]]; then
        traefik_port="${tls_port}"
        traefik_protocol=https
    fi
fi

# Generate upstream configuration
bashio::var.json \
    port "^${traefik_port}" \
    | tempio \
        -template /etc/nginx/templates/upstream.gtpl \
        -out /etc/nginx/includes/upstream.conf

# Generate Ingress configuration
bashio::var.json \
    interface "$(bashio::addon.ip_address)" \
    port "^$(bashio::addon.ingress_port)" \
    protocol "${traefik_protocol}" \
    | tempio \
        -template /etc/nginx/templates/ingress.gtpl \
        -out /etc/nginx/servers/ingress.conf

# Generate direct access configuration, if enabled.
if bashio::var.has_value "$(bashio::addon.port 80)"; then
    bashio::config.require.ssl
    bashio::var.json \
        certfile "$(bashio::config 'certfile')" \
        keyfile "$(bashio::config 'keyfile')" \
        leave_front_door_open "^$(bashio::config 'leave_front_door_open')" \
        port "^$(bashio::addon.port 80)" \
        protocol "${traefik_protocol}" \
        ssl "^$(bashio::config 'ssl')" \
        | tempio \
            -template /etc/nginx/templates/direct.gtpl \
            -out /etc/nginx/servers/direct.conf
fi
